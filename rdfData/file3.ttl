@prefix : <http://example.com/catastrophe#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/catastrophe>
        rdf:type owl:Ontology ;
        owl:imports <https://raw.githubusercontent.com/mouridoullah/elk-knowledge-graph/main/rdfData/file3.ttl> .

:Catastrophe rdf:type owl:Class ;
    rdfs:subClassOf :Calamité,
                        :Danger,
                        :CauseDeDeces,
                        :Condition ;
    rdfs:label "Catastrophe"@fr ;
    rdfs:comment "Un événement qui cause des dommages importants, des victimes et des perturbations de grande ampleur"@fr ;
    owl:hasKey :numero .

:Calamité rdf:type owl:Class ;
    rdfs:subClassOf owl:Thing ;
    rdfs:label "Calamité"@fr ;
    rdfs:comment "Un événement qui provoque des dégâts matériels et/ou humains"@fr .

:Danger rdf:type owl:Class ;
    rdfs:subClassOf owl:Thing ;
    rdfs:label "Danger"@fr ;
    rdfs:comment "Un événement qui représente un risque pour les personnes, les biens ou l'environnement"@fr .

:CauseDeDeces rdf:type owl:Class ;
    rdfs:subClassOf owl:Thing ;
    rdfs:label "Cause de décès"@fr ;
    rdfs:comment "Un événement qui entraîne la mort d'une ou plusieurs personnes"@fr .

:Condition rdf:type owl:Class ;
    rdfs:subClassOf owl:Thing ;
    rdfs:label "Condition"@fr ;
    rdfs:comment "Un état qui peut causer des dommages ou des perturbations"@fr .

:Sauvetage rdf:type owl:Class ;
    rdfs:subClassOf owl:Thing ;
    rdfs:label "Sauvetage"@fr ;
    rdfs:comment "Cette classe décrit les opérations de sauvetage nécessaires lors d'une catastrophe"@fr .




:Seisme rdf:type owl:Class ; rdfs:subClassOf :Catastrophe .

:Sauvetage_Seisme rdf:type owl:Class ;
    rdfs:subClassOf :Sauvetage ;
    rdfs:label "Sauvetage pour un séisme"@fr .


:nombreDeMorts a owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range xsd:int ;
    rdfs:label "Nombre de morts"@fr ;
    rdfs:comment "Le nombre de personnes décédées lors de la catastrophe"@fr .

:nombreDeVictimes a owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range xsd:int ;
    rdfs:label "Nombre de victimes"@fr ;
    rdfs:comment "Le nombre de personnes affectées par la catastrophe"@fr .

:nombreDeSurvivants a owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range xsd:int ;
    rdfs:label "Nombre de survivants"@fr ;
    rdfs:comment "Le nombre de personnes qui ont survécu à la catastrophe"@fr .

:nombreDeDisparus a owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range xsd:int ;
    rdfs:label "Nombre de disparus"@fr ;
    rdfs:comment "Le nombre de personnes qui sont portées disparues suite à la catastrophe"@fr .

:nombreDeBlesses a owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range xsd:int ;
    rdfs:label "Nombre de blessés"@fr ;
    rdfs:comment "Le nombre de personnes blessées suite à la catastrophe"@fr .

:coutDesDommages a owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range xsd:float ;
    rdfs:label "Côut des dommages"@fr ;
    rdfs:comment "Le montant des pertes et dommages suite à la catastrophe"@fr .

:aPourCauseImmediate a owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range owl:Thing ;
    rdfs:label "A pour cause immédiate"@fr ;
    rdfs:comment "ce qui est intervenu comme ayant le plus concrètement déterminé ou déclenché le sujet. Utilisé en conjonction avec « a pour cause » (sous-jacente) et « a comme facteur contributif ». Voir « Help:Modeling causes »."@fr .

:aDetruit a owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range owl:Thing ;
    rdfs:label "Détruit"@fr ;
    rdfs:comment "Ce que l'événement a détruit"@fr .

:aPourDate rdf:type owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range xsd:date ;
    rdfs:label "La date"@fr ;
    rdfs:comment "La date de l'événement"@fr .

:aLieu rdf:type owl:ObjectProperty ;
    rdfs:domain :Catastrophe ;
    rdfs:range <http://www.w3.org/2003/01/geo/wgs84_pos#SpatialThing> ;
    rdfs:label "Le lieu"@fr ;
    rdfs:comment "Le lieu de l'événement"@fr .

:nombreDeSecouristes rdf:type owl:ObjectProperty ;
    rdfs:label "Nombre de secouristes nécessaires"@fr ;
    rdfs:comment "Cette propriété indique le nombre de secouristes nécessaires pour effectuer une opération de sauvetage"@fr ;
    rdfs:range xsd:int , :Catastrophe ;
    rdfs:domain :Sauvetage .
